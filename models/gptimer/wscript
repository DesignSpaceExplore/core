#! /usr/bin/env python
# encoding: utf-8
top = '../..'

def build(self):
  self(
    target          = 'gptimer',
    features        = 'cxx cxxstlib',
    source          = 'gptimer.cpp gpcounter.cpp', 
    export_includes = self.top_dir,
    includes = self.top_dir,
    uselib          = 'BOOST SYSTEMC TLM AMBA GREENSOCS',
    use             = 'common signalkit utils',
    install_path   = '${PREFIX}/lib',
  )
