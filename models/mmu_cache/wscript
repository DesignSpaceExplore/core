  bld(
    target       = 'mmu_cache.5.lt.test',
    features     = 'cxx cprogram test',
    source       = ['test5/testbench.cpp',
                    'test5/top_lt.cpp'],
    includes     = '. lib test5',
    uselib       = 'SYSTEMC TLM AMBA GREENSOCS',
    use          = 'mmu_cache ahbctrl ahbmem common utils',
  )

  bld(
    target       = 'mmu_cache.5.at.test',
    features     = 'cxx cprogram test',
    source       = ['test5/testbench.cpp',
                    'test5/top_at.cpp'],
    includes     = '. lib test5',
    uselib       = 'SYSTEMC TLM AMBA GREENSOCS',
    use          = 'mmu_cache ahbctrl ahbmem common utils',
