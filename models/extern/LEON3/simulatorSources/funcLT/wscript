#!/usr/bin/env python
# -*- coding: iso-8859-1 -*-
TOP = '../../../../..'
import os

def build(bld):
    sources = """
        instructions.cpp
        registers.cpp
        alias.cpp
        processor.cpp
        interface.cpp
        decoder.cpp
        memory.cpp
        externalPorts.cpp
        irqPorts.cpp
        externalPins.cpp
    """

    uselib = 'TRAP ELF_LIB BOOST BOOST_PROGRAM_OPTIONS BOOST_THREAD BOOST_FILESYSTEM BOOST_SYSTEM SYSTEMC TLM'
    use = 'mmu_cache utils signalkit common'

    bld.install_files('${PREFIX}/include/models/LEON3/funcLT', bld.path.ant_glob('*.hpp'))

    bld(
        target          = 'leon3.funclt',
        features        = 'cxx cxxstlib',
        export_includes = '.',
        includes        = '.',
        uselib          = uselib,
        use             = use,
        source          = sources,
        install_path    = '${PREFIX}/lib',
    )

    sources = sources + 'main.cpp'
    bld.program(
        target = 'leon3.funclt.platform',
        includes = '.',
        defines = 'LEON3_STANDALONE', 
        source = sources, 
        uselib = uselib, 
        use = use, 
    )
