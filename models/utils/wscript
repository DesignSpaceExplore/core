#! /usr/bin/env python
# vim : set fileencoding=utf-8 expandtab noai ts=4 sw=4 filetype=python :
top = '../..'

def build(bld):
  bld(
    target          = 'utils',
    features        = 'cxx cxxstlib',
    source          = ['ahbdevice.cpp',
                       'apbdevice.cpp',
                       'memdevice.cpp',
                       'clkdevice.cpp',
                       'ahbslave.cpp',
                       'ahbmaster.cpp'
                      ],
    export_includes = '.',
    uselib          = 'SYSTEMC TLM AMBA GREENSOCS',
    use             = 'signalkit common',
    install_path   = '${PREFIX}/lib',
  )
