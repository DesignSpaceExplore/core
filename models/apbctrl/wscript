#! /usr/bin/env python
# vim : set fileencoding=utf-8 expandtab noai ts=4 sw=4 filetype=python :
top = '../..'

def build(bld):
  bld(
    target          = 'apbctrl',
    features        = 'cxx cxxstlib',
    source          = 'apbctrl.cpp', 
    export_includes = '.',
    uselib          = 'SYSTEMC TLM AMBA GREENSOCS',
    use             = 'utils common',
    install_path   = '${PREFIX}/lib',
  )
  
