top = '..'

def set_options(ctx):
  pass 

def configure(ctx):
  pass
  
def build(bld):
  bld(
    name           = 'signalkit',
    export_incdirs = '.',
    uselib         = 'BOOST SYSC',
  )
 
  bld(
    target       = 'simple.test',
    features     = 'cxx cprogram test',
    source       = 'tests/simple.cpp',
    includes     = '.',
    uselib       = 'BOOST SYSC',
    uselib_local = 'signalkit'
  )
  
  bld(
    target       = 'systemc.test',
    features     = 'cxx cprogram test',
    source       = 'tests/systemc.cpp',
    includes     = '.',
    uselib       = 'BOOST SYSC',
    uselib_local = 'signalkit'
  )
  
  bld(
    target       = 'datatypemapping.test',
    features     = 'cxx cprogram test',
    source       = 'tests/datatypemapping.cpp',
    includes     = '.',
    uselib       = 'BOOST SYSC',
    uselib_local = 'signalkit'
  )
   
