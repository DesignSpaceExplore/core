      ram         = 'irqmp.sparc',
  )
  """
  bld(
     features     = 'c cprogram sparc',
     target       = 'ram.sparc',
     source       = ['top_ram_test.c',
                     'ramfill.c', 
                     'standalone.c', 
                     'ramtest.c',
                     'cacheasm.S',
                     'cache.c'],
  )
  
  bld(
      features    = 'systest',
      target      = 'systest.test',
