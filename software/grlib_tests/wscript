      features    = 'systest',
      target      = 'systest.test',
      system      = 'singlecore.lt.platform',
      rom         = 'singlecore.lt.prom',
      ram         = 'cache.sparc',
  )
  """
  bld(
     features     = 'c cprogram sparc',
     target       = 'gptimer.sparc',
     source       = ['top_gptimer_test.c',
                     'ramfill.c', 
                     'standalone.c', 
                     'irqmp.c',
                     'gptimer.c',
                     'cacheasm.S', 
                     'cache.c'],
  )
  """
  bld(
      features    = 'systest',
      target      = 'systest.test',
      system      = 'singlecore.lt.platform',
      rom         = 'singlecore.lt.prom',
      ram         = 'gptimer.sparc',
  )
  """
  bld(
     features     = 'c cprogram sparc',
     target       = 'irqmp.sparc',
     source       = ['top_irqmp_test.c',
                     'ramfill.c', 
                     'standalone.c', 
