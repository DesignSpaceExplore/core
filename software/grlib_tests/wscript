top = '../..'

def build(bld):
  bld(
     features     = 'c cprogram sparc',
     target       = 'hello.sparc',
     source       = ['hello.c'],
  )

  bld(
      features    = 'systest',
      target      = 'systest.test',
      system      = 'singlecore.lt.platform',
      rom         = 'singlecore.lt.prom',
      ram         = 'hello.sparc',
  )
  
  bld(
     features     = 'c cprogram sparc',
     target       = 'cache.sparc',
     cxxflags     = '-static -g -O1 -lm',
     linkflags    = '-static -g -O1 -lm',
     source       = ['top_cache_test.c',
                     'ramfill.c', 
                     'standalone.c', 
                     'cacheasm.S', 
                     'cache.c'],
  )
  """
